@inject IBlog blogService

@foreach (var blog in Blogs)
{
    <div class="col-md-3 mb-2">
        <a href="/Blog/@blog.Id">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @blog.Title
                    </h5>
                </div>
            </div>
        </a>

    </div>
}

@code{
    [Parameter]
    public IEnumerable<Blog> Blogs{ get; set; }
}